<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"> <i class="fas fa-sign-in-alt"></i>  Reset password</h1>   
        <center><% if (msg!="") { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= msg %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% } %></center>                
        <form action="/forgot" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input 
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Send OTP to E-mail ID</button>
        </form>
        <p class="lead mt-4">
          Ohh. Now I remember Password! <a href="/users/login">Login</a>
        </p>
      </div>
    </div>
  </div>